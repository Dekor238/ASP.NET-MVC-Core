@model List<Category>
@{
    ViewData["Title"] = "Список категорий";
}

@if (Model.Count == 0)
{
    <div>Нет категорий для отображения</div>
}
else
{
    <table>
        <tr><td align="left" width="150">Id категории</td><td align="left">Название категории</td></tr>
        @* @Html.DisplayNameFor(Model => Model.Name); *@
        @foreach (var cat in Model)
        {
            <tr><td>@cat.Id</td><td>@cat.Name</td></tr>
        }
    </table>
}

<br/>
<div>-----------------------------------------------</div>

<div class="container-fluid">
<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Catalog" asp-action="Add">Добавить</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Catalog" asp-action="Edit">Изменить</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Catalog" asp-action="Delete">Удалить</a>
        </li>
    </ul>
</div>
</div>
