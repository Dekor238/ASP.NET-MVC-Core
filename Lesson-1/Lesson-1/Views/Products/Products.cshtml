@model IReadOnlyList<Products>
@{
    ViewData["Title"] = "Список подуктов";
}

@if (Model.Count == 0)
{
    <div>Нет продуктов для отображения</div>
}
else
{
    <table>
        <tr><td align="left" width="150">Id продукта</td><td align="left" width="250">Название продукта</td><td align="left"></td></tr>
        @foreach (var cat in Model)
        {
            <tr><td>@cat.Id</td><td>@cat.Name</td><td><img src="@cat.Img" height="200" width="auto"/></td></tr>
        }
    </table>
}

<br/>
<div>-----------------------------------------------</div>

<div>
    
    <a asp-area="" asp-controller="Products" asp-action="AddP">Добавить</a>
    |
    <a asp-area="" asp-controller="Products" asp-action="EditP">Изменить</a>
    |
    <a asp-area="" asp-controller="Products" asp-action="DeleteP">Удалить</a>

</div>